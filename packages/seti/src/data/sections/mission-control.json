  "mission_control_live": {
    "heading": "Mission Control API - Live Metrics",
    "code": "mission_control_live",
    "items": [
      {
        "query": "histogram_quantile(0.95, sum(rate(http_request_duration_seconds_bucket{app=\"api\", method=\"GET\"}[15m])) by (le)) * 1000",
        "id": "mission_control_live_response_time",
        "grid": {
          "xs": 4,
          "small": 8,
          "medium": 6
        },
        "step": "30",
        "chart": {
          "heading": "ALL Portal API Endpoints - Global Response Time",
          "copy": "95th percentile response time, measured in milliseconds.",
          "controls": {
            "shape": "bar",
            "shapeNames": ["Response time (ms)"],
            "tooltipLabelPrefix": "time"
          }
        }
      },
      {
        "query": "(sum(rate(http_request_duration_seconds_count{app=\"api\", http_status=\"5XX\"}[5m])) / sum(rate(http_request_duration_seconds_count{app=\"api\"}[5m]))) or vector(0)",
        "id": "mission_control_live_5xx_count",
        "grid": {
          "xs": 2,
          "small": 2,
          "medium": 2
        },
        "step": "60",
        "stat": "last",
        "chart": {
          "heading": "Global 5XX Error Rate",
          "size": "xs",
          "controls": {
            "shape": "absolute",
            "suffix": "%",
            "mappings": [
              {
                "range": [0.1499, 1],
                "color": "red"
              },
              {
                "range": [0.0999, 0.1499],
                "color": "citron"
              },
              {
                "range": [0, 0.0999],
                "color": "green"
              }
            ]
          }
        }
      }
    ]
