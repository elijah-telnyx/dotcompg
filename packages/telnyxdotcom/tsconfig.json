{
  "compilerOptions": {
    "baseUrl": "./src",
    "paths": {
      "ui/*": [
        "../../ui/src/*"
      ]
    },
    "lib": [
      "ES2022"
    ],
    "module": "esnext",
    "target": "ES2022",
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "verbatimModuleSyntax": true
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    "**/*.d.ts"
  ],
  "exclude": [
    "node_modules",
    "../e2e",
    "../cache"
  ]
}
